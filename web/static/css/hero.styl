@require 'nib'
@require 'jeet'

.hero
  position relative
  overflow hidden
  margin-bottom 40px
  background linear-gradient(top, gray, #4863a0)
  height 350px
  +desktop()
    height 450px

.hero-inner
  color #e8e8e8
  position absolute
  margin 80px
  font-style oblique
  font-weight bold
  +mobile()
    margin 40px
