@require 'nib'
@require 'jeet'
@require 'rupture'
@require '_variables'
@require './components/*'
@require './layouts/*'

html,
body
  height: 100%

body
  background-color: $lightbg

h1
  text-align: center

.wrapper
  min-height: 100%
  margin 0 auto -200px
  +mobile()
    margin 0 auto -350px

.section
  section-center()

a
  link($steelblue)

.container
  padding: 0 20px

.btn
  glossy-button()
  click-shrink()
.btn-danger
  glossy-button(red, "small")

.text-right
  text-align: right
